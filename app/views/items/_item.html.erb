
<div id="<%= dom_id item %>">
    <p>
      <strong>Name:</strong>
      <%= item.name %>
      <br>
      <strong>City:</strong>
      <%= item.city%>
      <% if item.discarded? %>
        <div id="<%= dom_id item %>">
          <p>
            Deleted
            <% if !item.discarded_message.nil? %>
              : 
              <%= item.discarded_message %>
            <%end%>
          </p>
      <% end %>
  </p>
</div>
